<div class="content is-vcentered has-text-centered">
    <div class="container">
        <div class="content is-large">
            <div class="level-item has-text-centered">
                <h1>Registration form</h1>
            </div>
        </div>
    </div>
</div>

<%= form_with model: @user do |form| %>

    <div class="field">
        <div class="level-item has-text-centered">
            <div class="control has-icons-left">
                <%= form.text_field :name, class: "input", placeholder: "name" %>
                <span class="icon is-small is-left">
                    <i class="fas fa-user"></i>
                </span>
            </div>
        </div>
        <% @user.errors.full_messages_for(:name).each do |message| %>
            <div class="level-item has-text-centered">
                <br>
                <p class="help is-danger">
                    <%= message %>
                </p>
            </div>
        <% end %>
    </div>

    <div class="field">
        <div class="level-item has-text-centered">
            <div class="control has-icons-left">
                <%= form.text_field :email, class: "input", placeholder: "email@example.com" %>
                <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                </span>
            </div>
        </div>
        <% @user.errors.full_messages_for(:email).each do |message| %>
            <div class="level-item has-text-centered">
                <br>
                <p class="help is-danger">
                    <%= message %>
                </p>
            </div>
        <% end %>
    </div>

    <div class="field">
        <div class="level-item has-text-centered">
            <div class="control has-icons-left">
                <%= form.password_field :password, class: "input", placeholder: "password" %>
                <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                </span>
            </div>
        </div>
        <% @user.errors.full_messages_for(:password).each do |message| %>
            <div class="level-item has-text-centered">
                <br>
                <p class="help is-danger">
                    <%= message %>
                </p>
            </div>
        <% end %>
    </div>

    <div class="field">
        <div class="level-item has-text-centered">
            <div class="field is-grouped">
                <p class="control">
                    <%= form.submit button_text, class: "button is-link" %>
                </p>
                <p class="control">
                    <%= link_to 'Back to home page'.html_safe, root_path, class: "button is-light" %>
                </p>
            </div>
        </div>
    </div>

<% end %>
