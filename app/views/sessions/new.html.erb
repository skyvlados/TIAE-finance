<div class="content is-large">
    <h1>Log in</h1>
</div>

<% if !@button_repeat_send %>
  <%= form_for(:session, url: login_path) do |form| %>

    <div class="field">
      <label class="label">Email</label>
      <div class="control has-icons-left">
        <%= form.email_field :email, class: "input", placeholder: "email@example.com" %>
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
      </div>
    </div>

    <div class="field">
      <label class="label">Password</label>
      <div class="control has-icons-left">
        <%= form.password_field :password, class: "input", placeholder: "1234" %>
        <span class="icon is-small is-left">
          <i class="fas fa-lock"></i>
        </span>
      </div>
    </div>

    <div>
      <div class="field is-grouped">
        <div class="control">
          <%= form.submit 'Log in', class: "button is-success" %>
        </div>

        <div class="control">
          <%= link_to 'Sign up', new_user_path, class: "button is-link" %>
        </div>

        <div class="control">
          <%= link_to 'Forgot password', forgot_password_path, class: "button is-warning" %>
        </div>

      </div>
    </div>

  <% end %>
<% else %>
  <%= form_for(:session, url: send_confirm_email_path) do |form| %>

    <div class="field">
      <label class="label">Email</label>
      <div class="control has-icons-left">
        <%= form.hidden_field :email, value: @email, class: "input", placeholder: "email@example.com" %>
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
      </div>
    </div>

    <div class="field is-grouped">
      <p class="control">
        <%= form.submit 'Send confirm email', class: "button is-success"%>
      </p>
      <p class="control">
        <%= link_to 'Sign up', new_user_path, class: 'button is-link' %>
      </p>
    </div>
  
  <% end %>
<% end %>
