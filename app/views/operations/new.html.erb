<h1>Create form</h1>
<%= form_with model: @operation do |form| %>
  <div>
    <%= form.label :categories_type %><br>
    <%= form.text_field :categories_type %>
    <% @operation.errors.full_messages_for(:categories_type).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>
  <div>
      <%= form.label :categories %><br>
      <%= form.select :category_id, Category.all.collect {|p| [p.name, p.id]}%>
      <% @operation.errors.full_messages_for(:category_id).each do |message| %>
          <div><%= message %></div>
      <% end %>
  </div>
  <div>
    <%= form.label :date %><br>
    <%= form.date_select :date%>
    <% @operation.errors.full_messages_for(:date).each do |message| %>
       <div><%= message %></div>
       <% end %>
  </div>
  <div>
    <%= form.label :amount %><br>
    <%= form.text_field :amount %>
    <% @operation.errors.full_messages_for(:amount).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>
  <label>Currency</label>
  <br><select name="currency" id="currency">
    <option value="" selected disabled hidden></option>
    <option value="1">RUB</option>
    <option value="2">USD</option>
    <option value="3">EUR</option>
    <% @operation.errors.full_messages_for(:currency).each do |message| %>
      <div><%= message %></div>
      <% end %>
</select>

  <div>
    <%= form.submit 'Save' %>
    <%= link_to '<button>Back to list</button>'.html_safe, operations_path %>
  </div>
<% end %>
