<div class="box">
  <div class="level is-mobile">
    <div class="level-left">
      <strong class="is-size-6">
        <%= operation.category.name %>
      </strong>
    </div>
    <div class="level-right">
      <span class="is-size-5 has-text-weight-bold
        <%= operation.direction == 'income' ? 'has-text-success' : 'has-text-danger' %>">
        <%= operation.amount %> <%= operation.currency %>
      </span>
    </div>
  </div>
  <div class="is-flex is-justify-content-space-between">
    <span class="tag <%= operation.direction == 'income' ? 'is-success' : 'is-danger' %> is-light">
      <%= operation.direction %>
    </span>

    <span class="is-size-7 has-text-grey">
      <%= operation.date.strftime("%d.%m.%Y %H:%M") %>
    </span>
  </div>

  <% if operation.comment.present? %>
    <p class="mt-2">
      <%= operation.comment %>
    </p>
  <% end %>

  <div class="buttons is-right mt-3">
    <%= link_to 'âœï¸',
                [:edit, operation],
                class: "button is-small is-light" %>

    <%= link_to 'ðŸ—‘',
                operation,
                class: "button is-small is-danger is-light",
                data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %>
  </div>
</div>
